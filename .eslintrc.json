{
    "extends": [
        // 규칙 세트
        "eslint:recommended",
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    // plugin add
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "script"
    },
    "env": {
        "browser": false,
        "es6": true,
        "node": true
    },
    "ignorePatterns": [
        "node_modules/",
        ".vscode/",
        "bin/",
        "views/",
        "public/",
        "locales",
        ".env"
    ],
    // error and warn and off
    "rules": {
        // 사용하지 않는 변수 경고
        "no-unused-vars": "warn",
        // console wan and error off
        "no-console": "off",
        "prettier/prettier": "error",
        // 카멜 케이스 컨벤션 해제
        "camelcase": "off",
        // 함수 끝 return 컨벤션 해제
        "consistent-return": "off",
        // 빈(코드가 작성되지 않은) 함수 경고
        "no-empty-function": "off",
        // method in this warn
        "class-methods-use-this": "warn",
        // else if 사용할수있게
        "no-else-return": "off",
        // 빈(코드가 작성되지 않은) constructor off
        "no-useless-constructor": "off",
        // 최대 class 조정
        "max-classes-per-file": ["warn", 5]
    }
}